#=============================================================================
# Hayek Monitor Environment Variables
# Compatible with bash/zsh (when sourced) and with systemd (EnvironmentFile)
#=============================================================================

# --- Mainnet ---
MAINNET_NAME_SUFFIX="Mainnet"
HAYEK_MAINNET_VOTE_ACCOUNT="EXAMPLE_MAINNET_VOTE_ACCOUNT"
HAYEK_MAINNET_IDENTITY="EXAMPLE_MAINNET_IDENTITY"
WATCHTOWER_MIN_BALANCE_MAINNET="0.5"

# --- Testnet ---
TESTNET_NAME_SUFFIX="Testnet"
HAYEK_TESTNET_IDENTITY="EXAMPLE_TESTNET_IDENTITY"
HAYEK_TESTNET_VOTE_ACCOUNT="EXAMPLE_TESTNET_VOTE_ACCOUNT"
WATCHTOWER_MIN_BALANCE_TESTNET="20"

# --- Debug ---
DEBUG_IDENTITY_KEY="EXAMPLE_DEBUG_IDENTITY_KEY"
DEBUG_VOTE_ACCOUNT="EXAMPLE_DEBUG_VOTE_ACCOUNT"
DEBUG_HOST="Debug"
WATCHTOWER_MIN_BALANCE_DEBUG="20"


# --- Solana RPC ---
SOLANA_MAINNET_RPC="https://api.mainnet-beta.solana.com"
SOLANA_TESTNET_RPC="https://api.testnet.solana.com"

# --- Telegram ---
TELEGRAM_BOT_TOKEN="EXAMPLE_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHAT_ID_MAINNET="-1234567890"
TELEGRAM_CHAT_ID_TESTNET="-0987654321"

# --- Discord ---
DISCORD_WEBHOOK="https://discord.com/api/webhooks/EXAMPLE_WEBHOOK_ID/EXAMPLE_TOKEN"
DISCORD_WEBHOOK_GENERAL="https://discord.com/api/webhooks/EXAMPLE_WEBHOOK_ID/EXAMPLE_TOKEN_GENERAL"
DISCORD_WEBHOOK_MAINNET="https://discord.com/api/webhooks/EXAMPLE_WEBHOOK_ID/EXAMPLE_TOKEN_MAINNET"
DISCORD_WEBHOOK_TESTNET="https://discord.com/api/webhooks/EXAMPLE_WEBHOOK_ID/EXAMPLE_TOKEN_TESTNET"
DISCORD_WEBHOOK_DEBUG="https://discord.com/api/webhooks/EXAMPLE_WEBHOOK_ID/EXAMPLE_TOKEN_DEBUG"

# --- InfluxDB ---
INFLUX_URL="https://example-influxdb.com:8086"
INFLUX_DB_BLOCKS="example_blocks"
INFLUX_USER="example_user"
INFLUX_PASS="example_password"
INFLUX_DB_VALIDATOR="example_validator"

# --- Solana Binary Path ---
SOLANA_BIN="/usr/local/bin/solana"

#=============================================================================
# Support for bash/zsh
#=============================================================================
# If the file is being sourced in a shell, export all variables
if [ -n "${BASH_VERSION:-}" ]; then
  export MAINNET_NAME_SUFFIX
  export HAYEK_MAINNET_VOTE_ACCOUNT
  export HAYEK_MAINNET_IDENTITY
  export WATCHTOWER_MIN_BALANCE_MAINNET
  export TESTNET_NAME_SUFFIX
  export HAYEK_TESTNET_IDENTITY
  export HAYEK_TESTNET_VOTE_ACCOUNT
  export WATCHTOWER_MIN_BALANCE_TESTNET
  export DEBUG_IDENTITY_KEY
  export DEBUG_VOTE_ACCOUNT
  export DEBUG_HOST
  export WATCHTOWER_MIN_BALANCE_DEBUG
  export SOLANA_MAINNET_RPC
  export SOLANA_TESTNET_RPC
  export TELEGRAM_BOT_TOKEN
  export TELEGRAM_CHAT_ID_MAINNET
  export TELEGRAM_CHAT_ID_TESTNET
  export DISCORD_WEBHOOK
  export DISCORD_WEBHOOK_GENERAL
  export DISCORD_WEBHOOK_MAINNET
  export DISCORD_WEBHOOK_TESTNET
  export DISCORD_WEBHOOK_DEBUG
  export INFLUX_URL
  export INFLUX_DB_BLOCKS
  export INFLUX_USER
  export INFLUX_PASS
  export INFLUX_DB_VALIDATOR
  export SOLANA_BIN
fi
